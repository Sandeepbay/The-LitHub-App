<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Book</h1>
    <div class="col-6 offset-3">
        <form action="/books" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="author">Author</label>
                <input class="form-control" type="text" id="author" name="book[author]" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="book[image]" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Book Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="book[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="book[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Book</button>
            </div>
        </form>
        <a href="/books">All Books</a>
    </div>
</div>
